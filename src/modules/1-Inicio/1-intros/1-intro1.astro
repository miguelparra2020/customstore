---
import Picture from "astro/components/Picture.astro";
import Link from "../../../components/ui/link.astro";
import {
  titleIntro,
  textIntro,
  colorTitleIntro,
  colorTextIntro,
  urlImagenIntro,
  buttonVerMasActive
  } from '../../../config/0-Cliente-Configuracion/1-intros-config/1-intros-intro1-config.jsx';
---

<style>
  .session1 {
    width: 100%;
    height: 88vh;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
  }

  .textos_contenedor {
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 20px;
    text-align: center;
  }

  .imagen_contenedor {
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  @media (max-width: 768px) {
    .session1 {
      flex-direction: column;
    }

    .textos_contenedor {
      width: 100%;
      height: 50%;
    }

    .imagen_contenedor {
      width: 100%;
      height: 50%;
    }

  }
</style>

<div class="session1">
  <div class="textos_contenedor">
    <div class={`${colorTitleIntro} text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter`}>
      {titleIntro}
    </div>
    <div class={`${colorTextIntro} text-lg mt-4 text-slate-600 max-w-xl `}>
      {textIntro}
    </div>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      {buttonVerMasActive && <Link
        href="/4-Nosotros"
        class="flex gap-1 items-center justify-center"
        rel="noopener">

         Ver m√°s...
      </Link> }
    </div>
  </div>

  <div class="imagen_contenedor">
    <div style="width: 90%;">
    <Picture
        src={urlImagenIntro}
        alt="Astronaut in the air"
        widths={[200, 400, 600]}
        sizes="(max-width: 600px) 100vw, 620px"
        loading="eager"
        formats={['avif', 'webp', 'jpeg']}
        class=" rounded-lg  shadow-md transition-shadow duration-300 ease-in-out hover:shadow-xl hover:scale-105"
        />
      </div>
  </div>
</div>
